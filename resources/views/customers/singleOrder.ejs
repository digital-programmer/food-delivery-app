<section class="status">
    <div class="container mx-auto">
        <div class="w-2/3 mx-auto status-box pt-12">
            <div class="flex items-center justify-between mb-12">
                <h1 class="font-bold text-xl">Track Delivery Status</h1>
                <h6 class="bg-white py-1 rounded-full px-4 text-green-600 text-xs">
                    <%= order._id %>
                        <input id="hiddenInput" type="hidden" value="<%= JSON.stringify(order) %>">
                </h6>
            </div>
            <ul>
                <li class="status-line text-xl pb-16" data-status="order_placed">
                    <span>Order placed</span>
                </li>
                <li class="status-line text-xl pb-16" data-status="confirmed">
                    <span>Order confirmation</span>
                </li>
                <li class="status-line text-xl pb-16" data-status="prepared">
                    <span>Preparation</span>
                </li>
                <li class="status-line text-xl pb-16" data-status="delivered">
                    <span>Out for delivery</span>
                </li>
                <li class="status-line text-xl pb" data-status="completed">
                    <span>Complete</span>
                </li>
            </ul>
        </div>
    </div>
</section>